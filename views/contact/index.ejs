<br>
  <div class="justify-content-center">
    <h2>Get in touch!</h2>
  </div>
  <br>
  <div class="row justify-content-center">
    <div id="submission_form">
      <form @submit.prevent="validateBeforeSubmit" action="/" method="post" id="myForm">
        <div class="form-group">
          <label for="name"  class="text-center">Name</label>
          <input type="text" v-validate="'required|alpha_spaces'" class="form-control" name="name"aria-describedby="name" placeholder="">
          <span class="error">{{errors.first('name')}}</span>
        </div>
        <div class="form-group" >
          <label for="email" class="text-center">Email</label>
          <input type="text" v-validate="'required|email'" class= "form-control" name="email" aria-describedby="email" placeholder="">
          <span class="error">{{errors.first('email')}}</span>
        </div>
        <div class="form-group">
          <label for="name" class="text-center">Subject</label>
          <input type="text" class="form-control" name="subject" aria-describedby="subject" placeholder="">
        </div>
        <div class="form-group">
          <label for="message" class="text-center" >Message</label>
          <textarea class="form-control"  v-validate="'required'" rows="6" name="message"></textarea>
          <span class="error">{{errors.first('message')}}</span>
        </div>
         <br>
        <button  type="submit" class="btn btn-contact" >Send Message</button>
         <br>
         <br>
        <% if(success) { %>

        <% } else if (errors){ %>
          <p>An error occurred, if this persists please get in touch via Linked in</p>
        <% } %>
      </form>



  </div>
